
{cover_enabled, true}.

{erl_opts, [
	debug_info, warnings_as_errors, {parse_transform, lager_transform}
]}.

% {edoc_opts, [{dir, "../../doc"}]}.

{deps, [
    lager,
    jsx,
    %% Comment out jiffy to use only native (jsx)
    {jiffy, {git, "https://github.com/davisp/jiffy.git", {branch, "feature-add-rebar3-support"}}},
    eper,
    recon,
    meck
]}.


{project_plugins, [pc]}.


%% xref checks to run
{xref_checks, [
    undefined_function_calls, undefined_functions,
    locals_not_used, deprecated_function_calls, deprecated_functions
]}.

